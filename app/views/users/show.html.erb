  <h2 class="comments-header">All Posts</h2>
  <% if !@comments.empty? %>
    <ul class="users-comments-list">
      <% @comments.each do |comment| %>
        <li class="comment">
          <a href= <%= "/comment/#{ comment.id }" %> class="comment-title">
            <%= comment.title %>
          </a>
          <p class="author">posted by <%= comment.user.name %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div id="no-posts">
      <p>you haven't posted anything yet! <a href="/comments/new">tell us your thoughts!</a></p>
    </div>
  <% end %>
</div>

<div id="right-content">
  <div id="logout">
    <%= link_to(("logout"), "/sessions/destroy", {method: :delete, class: "logout-button"}) %>
  </div>
  <div id="sidebar">
    <nav>
      <ul class="sidebar-list">
        <li><a href="/">home</a></li>
        <li><a href=<%= "/users/#{ @current_user.id }" %>>your posts</a></li>
        <li><a href="/comments/new">new post</a></li>
      </ul>
    </nav>
  </div>
</div>